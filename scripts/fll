# expand PATH's scope to include, and prefer, that of the yet-to-be-mounted
# live media.
export PATH=/root/usr/bin:/root/usr/sbin:/root/bin:/root/sbin:/usr/bin:/usr/sbin:/bin:/sbin

# source global variables from distro-defaults
. /etc/default/distro
export FLL_DISTRO_MODE=live	# XXX: override /etc/default/distro

# source common fll variable declarations and functions
. /scripts/fll-common

###############################################################################

echo ""
echo "${WHITE}Welcome to ${FLL_DISTRO_NAME} ("$(uname -m)") live linux!${NORMAL}"
echo ""

###############################################################################

mountroot()
{
	: # TODO
}

###############################################################################
